<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<div id="msg"></div><br />
<label id="labelContent">内容：</label><input type="text" id="text"><br />
<label id="labelUser">用户：</label><input type="text" id="user"><br />
<input type="submit" value="发送数据" onclick="song()">
<input type="hidden" id="toUserId" value="">
</body>
<script>
  var msg = document.getElementById("msg");
  <?php
        $websocketConfig = require 'config/server.php';
        $wsServer = 'ws://'.$websocketConfig['websocket']['host'].':'.$websocketConfig['websocket']['port'];
  ?>
  var wsServer = "<?php echo $wsServer;?>";
  //调用websocket对象建立连接：
  //参数：ws/wss(加密)：//ip:port （字符串）
  var websocket = new WebSocket(wsServer);
  //onopen监听连接打开
  websocket.onopen = function (evt) {
    //websocket.readyState 属性：
      /*
       CONNECTING    0    The connection is not yet open.
       OPEN          1    The connection is open and ready to communicate.
       CLOSING       2    The connection is in the process of closing.
       CLOSED        3    The connection is closed or couldn't be opened.
       */
    if(websocket.readyState == 1) {
      console.log('conn!');
    }else{
      msg.innerHTML = 'no conn!';
    }
  };

  function reply(v) {
    var toUserId = v.id;
    var toUserName = v.innerHTML;
    document.getElementById('labelContent').innerHTML = '回复 '+ toUserName;
    document.getElementById('toUserId').value = toUserId;
  }

  function song(){
    var text = document.getElementById('text').value;
    var user = document.getElementById('user').value;
    var toUserId = document.getElementById('toUserId').value;
    document.getElementById('text').value = '';
    //向服务器发送数据
    websocket.send(JSON.stringify({
      from: user,
      body:text,
      to:toUserId
    }));
  }
  //监听连接关闭
  websocket.onclose = function (evt) {
    console.log("Disconnected");
  };

  //onmessage 监听服务器数据推送
  websocket.onmessage = function (evt) {
    if(evt.data) {
      data = JSON.parse(evt.data);
      if(data.userList) {
        for(var i=0;i<data.userList.length;i++){
          msg.innerHTML += '<span><a href="#" onclick="reply(this)" id="'+ data.userList[i].fd +'">' + data.userList[i].username + '</a></span>&nbsp;&nbsp;';
        }
        msg.innerHTML += '<br>';
      }
      if(data.msg) {
        msg.innerHTML += data.msg +'<br>';
      }
      console.log(data);
    }
  };
  //监听连接错误信息
  websocket.onerror = function (evt, e) {
    console.log('Error occured: ' + evt.data);
  };

</script>
</html>